<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cn.ctbri.entity.CityMapper">
	<sql id="cols">id,code,name,type,provId,provCode,provName,area</sql>

	<resultMap type="com.cn.ctbri.entity.City" id="CityRM">
		<id property="id" column="id"/>
		<result property="code" column="code"/>
		<result property="name" column="name"/>
		<result property="type" column="type"/>
		<result property="provId" column="provId"/>
		<result property="provCode" column="provCode"/>
		<result property="provName" column="provName"/>
		<result property="area" column="area"/>
	</resultMap>
	<!-- 查询省份 -->
    <select id="findCityList" parameterType="hashmap" resultMap="CityRM">
		select <include refid="cols"/> from cs_city where provId=#{provId}
    </select>
</mapper>
